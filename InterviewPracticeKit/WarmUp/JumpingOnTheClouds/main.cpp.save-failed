// Complete the jumpingOnClouds function below.
int jumpingOnClouds(vector<int> c) {
    int jumps{0} ;
    int cloud{0} ;
    while (cloud < c.size() - 1)
    {
        if ( cloud + 2 == c.size() )
        { // Only one option. Jump to the last cloud.
            ++jumps ;
            break ;
        }
        else if ( (c[cloud+1] == 0 && c[cloud+2] == 0) || (c[cloud+1] == 1 && c[cloud+2] == 0) )
        {   // Allowed 1 jump of two clouds.
            ++jumps ;
            cloud += 2 ;
        }
        else // Only next cloud is available.
        {
            ++jumps ;
            ++cloud ;
        }
    }
    return jumps ;

}

